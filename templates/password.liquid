{% comment %}
Special layout for 404 page and password page
- https://docs.shopify.com/themes/theme-development/templates/password-liquid
{% endcomment %}
{% layout none %}

<!doctype html>
<!--[if IE 9 ]><html class="ie9 no-js"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html class="no-js"> <!--<![endif]-->
<head>

  <!-- Meta Tags ================================================== -->
  {% include 'meta-tags' %}

  <!-- Title and description ================================================== -->
  <title>
  {{ page_title }}

  {%- unless page_title contains shop.name -%}
    {%- if page_title != blank -%}
      &ndash; {{ shop.name }}
    {%- else -%}
      {{ shop.name }}
    {%- endif -%}
  {%- endunless -%}
  </title>

  <!-- CSS ================================================== -->
  {{ 'https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css' | stylesheet_tag }}
  {% include 'stylesheets' %}
  {% if settings.img_password_page_bg %}
    <style>
      .page-password{
        background-image: url({{settings.img_password_page_bg | img_url: '3840x' }});
      }
    </style>
  {% endif %}

  <!-- Fonts ================================================== -->
  {% include 'google-fonts' %}

  <!-- Favicons ================================================== -->
  {% include 'favicon' %}

  <!-- Header hook for plugins ================================================== -->
  {{ content_for_header }}

</head>

<body id="{{ page_title | handle }}" class="alternative" >

  <div class="page-password">

    {% if settings.password_page_use_logo %}
      <div class="logo-wrapper">
        {% include 'logo' %}
      </div>
    {% endif %}

    <div class="page-password__content">
      <h1 class="heading--accent">{{ 'checkout_and_system.general.opening_soon' | t }}</h1>
      {% if shop.password_message and shop.password_message != '' %}
        <p class="page-password__message">{{ shop.password_message }}</p>
      {% else %}
        <p class="page-password__message">{{ 'checkout_and_system.general.message_to_subscribe' | t }}</p>
      {% endif %}
    </div>

    {% include 'subscribe-form-shopify' %}

    {% if settings.password_page_share_enable %}
      <div class="social-sharing social-sharing-clear">
        <p class="heading--add-small">{{ 'layout.general.share_title_password_page' | t | upcase }}</p>
        {% include 'social-sharing' %}
      </div>
    {% endif %}

  </div> <!-- End page-password -->

  <footer class="footer">
    {% form 'storefront_password' %}

      {{ form.errors | default_errors }}

      <label for="password">Enter store using password:</label>
      <input type="password" name="password">
      <input type="submit" value="Enter">

    {% endform %}
  </footer>

</body>
</html>
