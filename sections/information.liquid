{% schema %}
  {
    "name": "Information Boxes",
    "settings": [
      {
        "type": "text",
        "id": "sect_hed",
        "label": "Headline"
      },
      {
        "type": "checkbox",
        "id": "show_sect_hed",
        "label": "Show Section Headline",
        "default": false
      },
      {
        "type": "radio",
        "id": "background_lightness",
        "label": "Light or Dark Background?",
        "default": "light",
        "options": [
          { "value": "light", "label": "Light" },
          { "value": "dark", "label": "Dark" }
        ]
      },
      {
        "type": "radio",
        "id": "default_image_size",
        "label": "Default Image Size",
        "default": "one-half",
        "options": [
          { "value": "one-quarter", "label": "1/4" },
          { "value": "one-third", "label": "1/3" },
          { "value": "one-half", "label": "1/2" }
        ],
        "info": "You can specify sizes for individual blocks, but if you don't, then this size will be used for all"
      },
      {
        "type": "checkbox",
        "id": "hide_image_on_mobile",
        "label": "Hide Images on Mobile?",
        "default": false
      }
    ],
    "blocks": [
      {
        "type": "info",
        "name": "Info Block",
        "settings": [
          {
            "type": "text",
            "id": "hed",
            "label": "Headline",
            "placeholder": "Type a headline or dont"
          },
          {
            "type": "image_picker",
            "id": "figure",
            "label": "Image"
          },
          {
            "type": "radio",
            "id": "image_size",
            "label": "Image Size",
            "default": "one-half",
            "options": [
              { "value": "one-quarter", "label": "1/4" },
              { "value": "one-third", "label": "1/3" },
              { "value": "one-half", "label": "1/2" }
            ]
          },
          {
            "type": "textarea",
            "id": "content",
            "label": "Body Content"
          },
          {
            "type": "radio",
            "id": "image_alignment",
            "label": "Image Alignment",
            "options": [
              { "value": "none", "label": "Image side alternates per row" },
              { "value": "left", "label": "Image Left, Text Right" },
              { "value": "right", "label": "Image Right, Text Left" }
            ],
            "default": "none",
            "info": "By default images will alternate back and forth, but if you would prefer them to be on a specific side, select this."
          }
        ]
      },
      {
        "type": "article",
        "name": "Article Block",
        "settings": [
          {
            "type": "article",
            "id": "info_article",
            "label": "Article to feature in info box"
          },
          {
            "type": "radio",
            "id": "image_alignment",
            "label": "Image Alignment",
            "options": [
              { "value": "none", "label": "Image side alternates per row" },
              { "value": "left", "label": "Image Left, Text Right" },
              { "value": "right", "label": "Image Right, Text Left" }
            ],
            "default": "none",
            "info": "By default images will alternate back and forth, but if you would prefer them to be on a specific side, select this."
          },
          {
            "type": "radio",
            "id": "image_size",
            "label": "Image Size",
            "default": "one-half",
            "options": [
              { "value": "one-quarter", "label": "1/4" },
              { "value": "one-third", "label": "1/3" },
              { "value": "one-half", "label": "1/2" }
            ]
          }
        ]
      },
      {
        "type": "html",
        "name": "Arbitrary HTML",
        "settings": [
          {
            "type": "html",
            "id": "html_area",
            "label": "Arbitrary HTML"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Information Box",
        "category": "Special sections"
      }
    ]
  }
{% endschema %}


<section class="section section--promobox-info {{ section.settings.background_lightness }} clearfix">
{%- if section.settings.show_sect_hed -%}
  <header><h2>{{ section.settings.sect_hed }}</h2></header>
{%- endif -%}
{% assign image_alignment = "init" %}
{% assign desktop = "large--" %}
{% assign mobile = "medium--" %}

{% if section.settings.hide_image_on_mobile %}
  {% assign hide_class = "hide" %}
{% else %}
  {% assign hide_class = "one-whole" %}
{% endif %}

{% for block in section.blocks %}

  {% if block.settings.image_alignment != "none" %}
    {% assign image_alignment = block.settings.image_alignment %}
  {% else %}
    {% if image_alignment == "left" %}
      {% assign image_alignment = "right" %}
    {% else %}
      {% assign image_alignment = "left" %}
    {% endif %}
  {% endif %}

  {% if block.settings.image_size != "default" %}
    {% assign image_size = block.settings.image_size %}
  {% else %}
    {% assign image_size = section.settings.default_image_size %}
  {% endif %}

  <article class="{{ block.type }} info-box full-width one-whole">
    {% capture inc %}block-{{ block.type }}{% endcapture %}
    {% include inc %}
  </article>
{% endfor %}

</section>

{% javascript %}
let infoboxSizing = (e)=>{
  console.log("Infobox sizing event: ",e);
  require(['jquery'],($)=>{
    $(".info-box").each(
      (i,e)=>{
        let $el = $(e)
        let $img = $($el.find("img"))
        let $con = $($el.children(".content")[0])
        let $hed = $($con.find(".hed")[0])
        let $led = $($con.find(".lede")[0])
        // set the font size so that the content matches the image height
        console.log($img.height())
        while ($con.height() >  $img.height()) {
          let fs = parseFloat($led.css("fontSize"));
          if (fs < 9) break;
          $led.css("font-size",(fs - 0.75)+"px")
          $hed.css("font-size",(parseFloat($hed.css("fontSize")) - 0.5)+"px")
        }

        // set the padding so that the content is vertically centered.
        let padd = ( $el.height()-$con.height() ) / 2
        $con.css("padding-top", "calc( " + padd + "px - .5em )")
      }
    )
  })
}
document.addEventListener("DOMContentLoaded", infoboxSizing)
window.addEventListener("resize", infoboxSizing)
{% endjavascript %}
