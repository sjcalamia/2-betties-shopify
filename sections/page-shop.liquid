{% schema %}
  {
    "name": "Our Products",
    "settings": [
      {
        "type": "text",
        "id": "sect_hed",
        "label": "Headline"
      },
      {
        "type": "checkbox",
        "id": "show_sect_hed",
        "label": "Show Section Headline",
        "default": false
      },
      {
        "type": "radio",
        "id": "background_lightness",
        "label": "Light or Dark Background?",
        "default": "light",
        "options": [
          { "value": "light", "label": "Light" },
          { "value": "dark", "label": "Dark" }
        ]
      },
      {
        "type": "radio",
        "id": "default_image_size",
        "label": "Default Image Size",
        "default": "one-half",
        "options": [
          { "value": "one-quarter", "label": "1/4" },
          { "value": "one-third", "label": "1/3" },
          { "value": "one-half", "label": "1/2" }
        ],
        "info": "You can specify sizes for individual blocks, but if you don't, then this size will be used for all"
      },
      {
        "type": "checkbox",
        "id": "hide_image_on_mobile",
        "label": "Hide Images on Mobile?",
        "default": false
      }
    ],
    "blocks": [
      {
        "type": "info",
        "name": "Info Block",
        "settings": [
          {
            "type": "text",
            "id": "hed",
            "label": "Headline",
            "placeholder": "Type a headline or dont"
          },
          {
            "type": "image_picker",
            "id": "figure",
            "label": "Image"
          },
          {
            "type": "radio",
            "id": "image_size",
            "label": "Image Size",
            "default": "one-half",
            "options": [
              { "value": "one-quarter", "label": "1/4" },
              { "value": "one-third", "label": "1/3" },
              { "value": "one-half", "label": "1/2" }
            ]
          },
          {
            "type": "textarea",
            "id": "content",
            "label": "Body Content"
          },
          {
            "type": "radio",
            "id": "image_alignment",
            "label": "Image Alignment",
            "options": [
              { "value": "none", "label": "Image side alternates per row" },
              { "value": "left", "label": "Image Left, Text Right" },
              { "value": "right", "label": "Image Right, Text Left" }
            ],
            "default": "none",
            "info": "By default images will alternate back and forth, but if you would prefer them to be on a specific side, select this."
          }
        ]
      },
      {
        "type": "article",
        "name": "Article Block",
        "settings": [
          {
            "type": "article",
            "id": "info_article",
            "label": "Article to feature in info box"
          },
          {
            "type": "radio",
            "id": "image_alignment",
            "label": "Image Alignment",
            "options": [
              { "value": "none", "label": "Image side alternates per row" },
              { "value": "left", "label": "Image Left, Text Right" },
              { "value": "right", "label": "Image Right, Text Left" }
            ],
            "default": "none",
            "info": "By default images will alternate back and forth, but if you would prefer them to be on a specific side, select this."
          },
          {
            "type": "radio",
            "id": "image_size",
            "label": "Image Size",
            "default": "one-half",
            "options": [
              { "value": "one-quarter", "label": "1/4" },
              { "value": "one-third", "label": "1/3" },
              { "value": "one-half", "label": "1/2" }
            ]
          }
        ]
      },
      {
        "type": "html",
        "name": "Arbitrary HTML",
        "settings": [
          {
            "type": "html",
            "id": "html_area",
            "label": "Arbitrary HTML"
          }
        ]
      }
    ]
  }
{% endschema %}

